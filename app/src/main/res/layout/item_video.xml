<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_10dp"
    android:layout_marginTop="@dimen/size_10dp"
    android:layout_marginEnd="@dimen/size_10dp"
    android:background="@drawable/shape_white_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hs.videoplayerdemo.SampleCoverVideo
        android:layout_width="match_parent"
        android:padding="@dimen/size_5dp"
        android:id="@+id/player"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/player"
        android:background="@color/dedede"/>
    <TextView
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_history"
        app:layout_constraintTop_toBottomOf="@+id/player"
        android:gravity="center_vertical"
        android:text="@string/video_history"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingEnd="@dimen/size_10dp"
        android:textSize="16sp"
        android:background="@drawable/item_white_bottom_selector"
        android:drawableRight="@drawable/ic_right_icon"
        android:layout_marginTop="@dimen/size_1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>